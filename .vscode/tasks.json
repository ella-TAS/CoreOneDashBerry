{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "release build",
            "command": "dotnet build -c Release;rm bin/CoreOneDashBerry.pdb",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "zip build",
            "command": "C:/Program Files/7-Zip/7z.exe",
            "args": [
                "a",
                "${workspaceFolder}/CoreOneDashBerry.zip",
                "${workspaceFolder}/bin",
                "${workspaceFolder}/everest.yaml"
            ],
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "silent"
            }
        }
    ]
}